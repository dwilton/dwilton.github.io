/* #region Tabs Control */

.TabsControl() {

  .TabGroup {
    position: relative;
  }

  .Tabs {
    display: block;
    position: relative;
    padding: 0 15px;
    bottom: -1px;
    overflow: hidden;

    li {
      display: inline-block;
      position: relative;
      margin-right: 5px;
      padding: 12px 10px 8px;

      span,
      a {
        display: inline-block;
        font: 16px 'Proxima Nova Regular';
      }

      a {
        text-decoration: none;
        cursor: pointer;
      }

      &.Active:before {
        content: '';
        position: absolute;
        width: 100%;
        height: 3px;
        top: -1px;
        left: 0;
      }
    }
  }

  .TabContent {
    display: none;
    padding: 20px;

    &.Active {
      display: block;
    }
  }


  /* Vertical Tabs */

  .TabsVertical {
    position: relative;

    .Tabs {
      position: absolute;
      top: 0;
      left: -1px;
      padding: 0;
      min-width: 125px;

      li {
        float: left;
        clear: left;
        margin: 0 0 5px;
        width: 125px;
        text-align: left;
        cursor: pointer;

        &.Active:before {
          top: 0;
          width: 3px;
          height: 100%;
        }

      }
    }

    .TabContent {
      min-height: 175px;
      margin-left: 123px;
    }
  }
}

/* #endregion */

/* #region Tabs Style */

.TabsStyle() {

  .Tabs {

    li {
      color: @tab-text-color;
      background-color: @tab-background-color;
      border: 1px solid @tab-border-color;
      border-bottom: 0;

      &:after {
        border-top: 3px solid @tab-background-color;
      }

      a {
        color: @tab-text-color;

        &:hover {
          color: @tab-text-color-hover;
        }
      }

      &.Active {
        background-color: @tab-active-background-color;

        &:before {
          .ColorBorderGradient(@tab-active-border-image);
        }

        a {
          color: @tab-active-text-color;
          text-decoration: none;
          cursor: pointer;
        }
      }
    }
  }

  .TabsVertical .Tabs li {
    border: 1px solid @tab-border-color;

    &.Active {
      border-right: 1px solid @tab-active-background-color;
    }

    .TabContent {
      border-top: 0;
      border-left: 1px solid @tab-border-color;
      background-color: @tab-content-background-color;
    }
  }

  .TabContent {
    border-top: 1px solid @tab-border-color;
    background-color: @tab-content-background-color;
  }

}

/* #endregion */

/* #region Tabs IE */

.TabsControlIE() {

  .TabGroup {
    display: block;
  }

  .Tabs {
    overflow: visible;

    li:after {
      display: none;
    }
  }

}

/* #endregion */

