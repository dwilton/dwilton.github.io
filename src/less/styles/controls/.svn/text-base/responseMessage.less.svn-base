/* #region Response Message Control */

.ResponseMessageControl() {

  .NoResults, 
  .InfoNote, 
  .DataError {
    display: inline-block;
    font: 14px @font-family-heading;

    &:before {
      content: "";
      display: inline-block;
      position: relative;
      padding-right: 6px;
      width: 20px;
      height: 20px;
      vertical-align: text-bottom;
    }
  }

  .DataError {

    ul {
      display: inline-block;
    }

    .ErrorText {
      display: inline-block;

      .ErrorLink {
        display: inline-block;
        text-decoration: none;
        cursor: pointer;

        &:hover {
          text-decoration: underline;
        }
      }
    }
  }

  .DataErrorBox,
  .InfoNoteBox {
    display: inline-block;
    padding: 8px 10px 10px 8px;
    border-width: 1px;
    border-style: solid;

    &.IconBackground {
      display: block;
      padding-left: 38px;
      background-repeat: no-repeat;
      background-position: 10px 10px;

      h4,
      strong {

        &:before {
          display: none;
        }
      }

      ul {
        list-style:disc inside;
      }
    }

    h4,
    strong {
      display: block;

      &:before {
        content: "";
        display: inline-block;
        position: relative;
        padding-right: 4px;
        width: 20px;
        height: 20px;
        vertical-align: text-bottom;
      }
    }
  }
}

/* #endregion */

/* #region Response Message Style */

.ResponseMessageStyle() {

  .NoResults {
    color: @response-message-noresults-text-color;

      &:before {
        background: @response-message-noresults-image;
      }
    }

    .InfoNote {
      color: @response-message-infonote-text-color;

      &:before {
        background: transparent @response-message-infonote-image no-repeat 0 3px;
      }
  }

  .DataError {
    color: @response-message-error-text-color;

    &:before {
      background: @response-message-error-image no-repeat 0 5px;
    }

    .ErrorText {

      .ErrorLink {
        color: @response-message-error-link-text-color;

        &:hover {
          text-decoration: underline;
        }
      }
    }
  }

  .DataErrorBox {
    border-color: desaturate(lighten(@issue-error, 4%), 48%);
    background-color: lighten(saturate(@issue-error, 32%), 50%);

    &.IconBackground {
      background-image: @response-message-error-image;
    }

    h4:before,
    strong:before {
      background: @response-message-error-image no-repeat 0 5px;
    }
  }

  .InfoNoteBox {
    border-color: desaturate(lighten(@issue, 4%), 48%);
    background-color: lighten(desaturate(@issue, 32%), 50%);

    &.IconBackground {
      background-image: @response-message-infonote-image;
    }

    h4:before,
    strong:before {
      background: transparent @response-message-infonote-image no-repeat 0 3px;
    }
  }
}

/* #endregion */

/* #region Response Message Control Hack */

.ResponseMessageControlHack() {

  .DataErrorBox {
    font-size: 12px;
    text-align: left;
  }

}

/* #endregion */