/* #region Blockquote Control */

.BlockquoteControl() {

  blockquote {
    position: relative;
    margin: 10px 0 20px;
    padding: 20px 60px;
    line-height: 1.3;
    quotes: "\201C""\201D""\2018""\2019";

    &:before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 3px;
      height: 100%;
    }

    &:after {
      position: absolute;
      top: 45px;
      left: 14px;
      content: open-quote;
      font-size: 80px;
      font-family: 'Proxima Nova Regular';
      line-height: 0.1em;
      margin-right: 0.25em;
      vertical-align: -0.4em;
    }

  }

}

/* #endregion */

/* #region Blockquote Style  */

.BlockquoteStyle() {

  blockquote {
    font-size: 14px;
    color: #777;
    background: #fff;

    &:before {
      .ColorBorderGradient(@tab-active-border-image, bottom);
    }

    &:after {
      color: #ccc;
    }
  }

}

/* #endregion */