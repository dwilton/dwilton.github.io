/* #region Data Control */

.DataControl() {

  .Data {
    display: inline-block;
    margin: 1px 0 2px;
    padding: 5px 8px;
    .UserSelect(text);
  }

}

/* #endregion */

/* #region Data Style */

.DataStyle() {

  .Data {
    color: @data-text-color;
    background-color: @data-background-color; 
    background-image: url('data:image/gif;base64,') repeat-x 0 0;

    &.Locked {
      color: @data-locked-text-color;
    }
  }

}

/* #endregion */