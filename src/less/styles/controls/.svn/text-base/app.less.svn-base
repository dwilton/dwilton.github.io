/* #region App Control  */

.AppControl() {

  html {
    height: 100%;
  }

  html, body {
    margin: 0;
    padding: 0;
    width: 100%;
  }

  body {
    min-height: 100%;
    font: normal 12px/18px @font-family;
  }

  .ClearFix {
    clear: both;
  }

  .Hidden {
    display: none !important;
  }

  .Empty {
    visibility: hidden !important;
  }

  .noWrap {
    white-space: nowrap;
  }

  .rightAlign {
    display: block;
    text-align: right;
  }

  .right {
    float: right;
  }

}

/* #endregion */

/* #region App Style  */

.AppStyle() {

  @font-face {
    font-family: 'Proxima Nova Light';
    src: @font-proxima-nova-light-eot; /* IE9 Compat Modes */
    src: @font-proxima-nova-light-eot-iefix format('embedded-opentype'), /* IE6-IE8 */
         @font-proxima-nova-light-svg format('svg'), /* Legacy iOS */
         @font-proxima-nova-light-woff format('woff'), /* Modern Browsers */
         @font-proxima-nova-light-ttf format('truetype'); /* Safari, Android, iOS */
    font-style:  normal;
    font-weight: 200;
    text-rendering: optimizeLegibility;
  }

  @font-face {
    font-family: 'Proxima Nova Regular';
    src: @font-proxima-nova-regular-eot; /* IE9 Compat Modes */
    src: @font-proxima-nova-regular-eot-iefix format('embedded-opentype'), /* IE6-IE8 */
         @font-proxima-nova-regular-svg format('svg'), /* Legacy iOS */ 
         @font-proxima-nova-regular-woff format('woff'), /* Modern Browsers */
         @font-proxima-nova-regular-ttf format('truetype'); /* Safari, Android, iOS */
    font-style:  normal;
    font-weight: 400;
    text-rendering: optimizeLegibility;
  }

  @font-face {
    font-family: 'Proxima Nova Bold';
    src: @font-proxima-nova-bold-eot; /* IE9 Compat Modes */
    src: @font-proxima-nova-bold-eot-iefix format('embedded-opentype'), /* IE6-IE8 */
         @font-proxima-nova-bold-svg format('svg'), /* Legacy iOS */
         @font-proxima-nova-bold-woff format('woff'), /* Modern Browsers */
         @font-proxima-nova-bold-ttf format('truetype'); /* Safari, Android, iOS */
    font-style:  normal;
    font-weight: 700;
    text-rendering: optimizeLegibility;
  }

  @font-face {
    font-family: 'Proxima Nova SemiBold';
    src: @font-proxima-nova-semibold-eot; /* IE9 Compat Modes */
    src: @font-proxima-nova-semibold-eot-iefix format('embedded-opentype'), /* IE6-IE8 */
         @font-proxima-nova-semibold-svg format('svg'), /* Legacy iOS */
         @font-proxima-nova-semibold-woff format('woff'), /* Modern Browsers */
         @font-proxima-nova-semibold-ttf format('truetype'); /* Safari, Android, iOS */
    font-style:  normal;
    font-weight: 700;
    text-rendering: optimizeLegibility;
  }

  body {
    color: @text-color;
    -webkit-font-smoothing: antialiased;
  }

}

/* #endregion */