/* #region Breadcrumbs Control */
.Breadcrumbs {
  li {
    display: inline-block;
    padding:0 8px 0 18px;
    background: @icon-breadcrumb-arrow no-repeat left center;
    font: normal 14px/18px "Proxima Nova Regular", Arial, Helvetica, Sans-Serif;
    vertical-align: middle;
  }
  a {
    color:#555;
  }
  li:first-child {
    padding: 0 12px 0 0;
    background: none;
  }
  li:first-child a{
    font-size: 20px;
    color: #555;
  }
}