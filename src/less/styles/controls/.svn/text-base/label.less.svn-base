/*#region Label Control */

.LabelControl() {

  label {
    display: block;
    margin-bottom: 4px;
    padding: 3px 0 0 0;
    font-weight: bold;

    &.Active:before,
    &.Inactive:before {
      content: "";
      display: inline-block;
      position: relative;
      left: 0;
      top: 0;
      margin-right: 3px;
      width: 20px;
      height: 20px;
      border-radius: 50%;
    }
  }

}

/*#endregion*/

/*#region Label Style */

.LabelStyle() {

  label {
    color: @label-text-color;

    &.Active:before {
      background: #4FA441 @icon-indicator-tick-light no-repeat 50% 50%;
    }

    &.Inactive:before {
      background: #EB1919 @icon-indicator-cross-light no-repeat 50% 50%;
    }

    &.disabled {
      color:#999;
    }

  }

}

/*#endregion*/

/*#region Label Control Hacks */

.LabelControlHack() {

  .accountSearch label {
    color: @label-text-color;
  }

}

/*#endregion*/