/* #region Grid Control */

.GridControl() {

  .Grid {
    position: relative;
    overflow: hidden;
    overflow-x: auto;
    width: 100%;

    table {
      width: 100%;
    }


    /**
     * Header
     */

    .GridHeader {
      position: relative;
      width: 100%;
      z-index: 1;

      table {
        width: 100%;
      }

      th {
        padding: 0;
        text-align: left;
        transition-property: background-color, box-shadow;
        transition-duration: 0.2s;
        timing-function: ease-in-out;
        .Ellipsis();

        a,
        span {
          display: block;
          padding: 3px 12px 3px 6px;
          font-weight: bold;
          border: none;
          cursor: default;
          .Ellipsis();

          &:hover {
            text-decoration: none;
          }
        }

        &.Sortable a {
          cursor: pointer;
        }
      }
    }

    /**
     * Common
     */

    .Right {
      text-align: right;
    }

    .Left {
      text-align: left;
    }

    .Center {
      text-align: center;
    }


    /**
     * Content
     */

    > .Content {
      position: absolute;
      width: 100%;
      top: 25px;
      bottom: 0;
      overflow: hidden;
      overflow-y: auto;
    }

    /**
     * Row
     */

    tr td {
      padding: 6px;
      vertical-align: top;
      background-color: transparent;
      border-right: 1px solid;
      border-left: 1px solid;
      overflow: hidden;
      .Ellipsis();

      &:first-child {
        border-left: 0;
      }

      &:last-child {
        border-right: 0;
      }
    }


    /**
     * Messaging
     */

    .NoResults,
    .DataError,
    .Loading {
      position: absolute;
      top: 50%;
      margin: -15px auto 0;
      width: 100%;
      text-align: center;
    }

    .Loading {
      z-index: 100;
    }

    .Message {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
    }

    .Overlay {
      position: absolute;
      height: 100%;
      width: 100%;
    }

    .Status {
      display: block;
      position: absolute;
      top: auto;
      right: 25px;
      bottom: 0;
      margin: 0;
      padding: 12px 12px 6px;
      border: 2px solid;
      border-bottom: none !important;
    }
  }

}

/* #endregion */

/* #region Grid Style */

.GridStyle() {

  .Grid {
    background-color: @grid-background-color;
    border: @grid-border;


    /**
     * Header
     */
    
    .GridHeader {
      background-color: @grid-header-background-color;

      th {
        color: @grid-header-text-color;
        background-color: @grid-header-background-color;
        border-right: 1px solid darken(@grid-header-background-color, 10%);
        border-bottom: 1px solid darken(@grid-header-background-color, 10%);

        a {
          color: @grid-header-text-color;
          border: none;

          &:hover {
            color: @highlight-text-color;
          }
        }

        &.Sortable:hover {
          background-color: @highlight-color;
          border-bottom: 1px solid darken(@highlight-color, 10%);
        }

        &.Asc a {
          background: @grid-header-sort-image-asc right 8px;
        }

        &.Desc a {
          background: @grid-header-sort-image-desc right 8px;
        }
      }
    }


    /**
     * Content
     */

    > .Content {
     background: @grid-content-background-color;
    }


    /**
     * Row
     */

    tr {
      background-color: @grid-row-even-color;

      td {
        color: @grid-text-color;
        .GridRow(@grid-row-even-color);
      }

      &.odd {
        background-color: @grid-row-odd-color;

        td {
          .GridRow(@grid-row-odd-color);
        }
      }

      /* Hover */
      &:hover td {
        color: @highlight-text-color;
        .GridRow(@highlight-color);
      }

      /* Selected */
       &.Selected {
        
        td {
          color: @selected-text-color;
          background-color:@selected-color;
        }

        &:hover td {
          color: @highlight-text-color;
          background-color: @highlight-color;
        }
      }
    }


  /**
   * Messaging
   */

  .NoResults,
  .DataError {
    color: @grid-error-text-color;
  }

  .Loading {
    color: @loading-text-color;
  }

  .Overlay {
    background: @grid-overlay-background-color;
    opacity: 0.8;
    -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=80)";
  }

  .MessageWindow {
    color: @loading-text-color;
    background-color: @grid-content-background-color;
  }

  .Status {
    color: @loading-text-color;
    background-color: @grid-overlay-background-color;
    border-color: @grid-border-color;
  }

  .MessageWindow .LoadIcon,
  .Status .LoadIcon {
    background: @loading-image;
  }

 }
}

/* #endregion */