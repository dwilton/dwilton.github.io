/* #region List Control */

.ListControl() {

  .ListContainer {
      position: relative;
      overflow-y: auto;

    .MessageWindow {
      margin: 80px auto 0;
    }

    .Message {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
    }
  }

  .List {

    ul {
      list-style: none;
    }

    ul, li {
      margin: 0;
      padding: 0;
    }

    li {
      padding: 6px 8px;
    }

    .Status {
      margin: 100px auto;
      width: 100px;
    }
  }

  .ListSelectable {

    li {
      padding: 0;

      a {
        display: block;
        padding: 7px 8px;
        font-weight: normal;
        cursor: pointer;
        border: none;
        text-decoration: none;
      }

      &.Selected {

        a {
        border: none;
        }
      }
    }
  }

  .Bulleted {
    list-style: disc inside;
    padding:0 0 10px;

    li {
      padding:0 0 0 10px;
    }
  }

}

/* #endregion */

/* #region List Style */

.ListStyle() {

  .ListContainer {
    background-color: @list-background-color;
    border: 2px solid @input-border-color;

    .MessageWindow {
      background: @list-background-color;
    }
  }

  .List {

    li {
      color: @list-text-color;
      background-color: darken(@list-background-color, 1.5%);

      label {
        color: @list-text-color;
      }

      &.Even{
        background-color: darken(@list-background-color, 5.5%);
      }
    }
  }

  .ListSelectable {

    li {

      label {
        color: @list-text-color;
      }

      a {
        color: @list-text-color;
        border: none;

        &:hover {
          color: @highlight-text-color;
          background: @button-highlight-color;
        }
      }

      &.Selected {

        a {
          color: @selected-text-color;
          background: @selected-color;
        }
      }
    }
  }
}

/* #endregion */

/* #region List Control IE */

.ListControlIE() {

  .ListSelectable {

    li {
      display:block;
      width:100%;

      a {
        width:100%;

        &:hover {
          text-decoration: none;
        }
      }
    }
  }

}

/* #endregion */