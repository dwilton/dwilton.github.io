/* #region Action Button Control */

.ActionButtonControl() {

  .ActionButtons {
    display: block;
    padding: 15px 0 5px;
    position: relative;
    overflow: hidden;

    &.Right {
      text-align: right;
    }

    button {
      float: right;
      margin: 0 5px;
      padding: 6px 20px;
      min-height: 32px;
      font: bold 14px/16px @font-family;
    }

  }

}

/* #endregion */

/* #region Action Button Control IE */

.ActionButtonControlIE() {

  .ActionButtons {

    button {
      min-height: 18px;

      > div {
        position: absolute;
        left: 0;
        top: 15px;
        text-align: left;
      }
    }
  }
  
}

/* #endregion */

/* #region Button Control Hacks */

.ActionButtonControlHack() {

  button {
    
    &:hover, &:focus {
      span {
        color: @white;
      }
    }
  }

}

/* #endregion */