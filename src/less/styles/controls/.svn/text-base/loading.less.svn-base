/* #region Loading Control */

.LoadingControl() {

  .Loading {
    font-size: 14px;

    span {
      display: inline-block;
      position: relative;
      margin-right: 10px;
      width: 18px;
      height: 18px;
      vertical-align: text-bottom;
      opacity: 0.4;
    }
  }
}

/* #endregion */

/* #region Loading Style */

.LoadingStyle() {

  .Loading {
    color: @loading-text-color;

    span {
      background: @loading-image;
      background-position: center center;
    }
  }
}

/* #endregion */