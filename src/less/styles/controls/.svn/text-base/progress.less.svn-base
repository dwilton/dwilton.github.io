/* #region Progress Control */

.ProgressControl() {

 progress {
  -webkit-appearance: none;
  display: inline-block;
  position: relative;
  vertical-align: middle;
  opacity: 0.5;
  text-align: left;
  width: auto;
  height: auto;
  .Rounded();

  &.Hide {
   position: absolute;
   left: -9999em;
  }

  &.Show {
   position: relative;
   left: 0;
  }

  &::-webkit-progress-inner-element {
   position: absolute;
   left: 10px;
   top: 5px;
  }

  &:after {
   content: "Loading";
   display: inline-block;
   position: relative;
   padding: 7px 10px 7px 33px;
   font: 14px @font-family-heading;
  }

  &.Searching:after {
   content: "Searching";
  }

  &::-webkit-progress-bar {
   display: inline-block;
   width: 18px;
   height: 18px;
   -webkit-animation: Rotate 2s infinite linear;
  }
 }

}

/* #endregion */

/* #region Progress Style */

.ProgressStyle() {

 progress {
  background: none;

  &::-webkit-progress-bar {
   background: @loading-image;
  }

	&::-webkit-progress-value {
   background: none;
  }

  &:after {
   color: @loading-text-color;
  }
 }

}

/* #endregion */

/* #region Progress Control IE */

.ProgressControlIE() {

 progress {
  background: @loading-image-ie;
	text-indent: -9999em;
 }

}

/* #endregion */
