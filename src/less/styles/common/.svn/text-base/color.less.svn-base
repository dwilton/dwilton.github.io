/**
 * Basic Color Palette
 */

@black:      #000;
@white:      #FFF;
@off-white:  #E0E1E9;
@off-black:  #000022;
@charcoal:   #333;
@silver:     #d9d9d9;
@grey:       #555;
@light-grey: #999;
@navy:       #20232D;
@blue:       #3086C0;
@orange:     #FF4526;
@green:      #53A848;
@red:        #db0000;

/* Shading */
@dark:       @black;
@light:      @white;

/* Foxtel Specific */
@ft-grey:    #50526B;
@ft-orange:  #FF4526;


/**
 * TV Classifications
 */

@rating-p:   #FF00FF;
@rating-c:   #FAC81E;
@rating-g:   #22B24C;
@rating-pg:  #FFF200;
@rating-m:   #00AEEF;
@rating-ma:  #ED1C24;
@rating-av:  #752F92;
@rating-r:   #1A1A1A;
@rating-nc:  #F79419;


/**
 * Gradients
 */

@gradient-stripe: linear-gradient(135deg, fadeout(@dark, 90%) 25%, fadeout(@dark, 100%) 25%, fadeout(@dark, 100%) 50%, fadeout(@dark, 90%) 50%, fadeout(@dark, 90%) 75%, fadeout(@dark, 100%) 75%, fadeout(@dark, 100%) 100%);
@gradient-gloss: linear-gradient(top, fadeout(@white, 70%) 0%, fadeout(darken(@white, 10%), 70%) 49%, fadeout(darken(@white, 33%), 70%) 51%, fadeout(darken(@white, 21%), 70%) 100%);
@gradient-container: linear-gradient(bottom, fadeout(@light, 70%) 0, fadeout(@light, 20%) 25px);


/**
 * Issues
 */

@issue-text-color: @charcoal;
@issue-titlebar-text-color: @white;
@issue-titlebar-text-shadow: 0 1px 1px fadeout(@light, 50%);
@issue-titlebar-close-color: @white;
@issue-titlebar-shadow: inset 0 1px 0 0 fadeout(@dark, 70%), inset 0 -1px 0 0 fadeout(@light, 50%);
@issue-container-shadow: inset 1px 1px 1px fadeout(@dark, 70%);
@issue-bullet-shadow: 1px 1px 0 fadeout(@dark, 80%), -1px -1px 0 fadeout(@light, 70%);
@issue-button-text-shadow: 0px 1px 1px fadeout(@light, 50%);

/* Issue Types e.g. Info, Warning, Error, Success */
@issue: @blue;
@issue-warning: @orange;
@issue-error: @red;
@issue-success: @green;


/**
 * Tooltips
 */

@tooltip-text-color: @black;
@tooltip-background-gradient: linear-gradient(bottom, fadeout(@light, 100%) 0, fadeout(@light, 50%) 20px);

/* Tooltip Types e.g. Info, Warning, Error */
@tooltip-info-background-color: lighten(desaturate(@blue, 20%), 40%);
@tooltip-info-border-color: darken(desaturate(@blue, 5%), 4%);
@tooltip-warning-background-color: lighten(desaturate(@issue-warning, 20%), 27%);
@tooltip-warning-border-color: lighten(saturate(@issue-warning, 29%), 13%);
@tooltip-error-background-color: lighten(desaturate(@issue-error, 20%), 40%);
@tooltip-error-border-color: lighten(saturate(@issue-error, 29%), 13%);